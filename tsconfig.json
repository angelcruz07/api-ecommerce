{
  "compilerOptions": {
    /* Configuración Base para Bun */
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowImportingTsExtensions": true, /* ESTO soluciona tu error de import app from "./app.ts" */
    "noEmit": true,                     /* ESTO permite que tsc solo verifique tipos, sin estorbar */
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,

    /* Configuración de Rutas y Alias (Vital para tus imports con @) */
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["routes/*"],
      "@controllers/*": ["controllers/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@interfaces/*": ["interfaces/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"]
}